@model IEnumerable<WebApplication16.Models.Samsung>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.imageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SamsungAciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SamsungFiyat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/image/Samsung/@item.imageName" asp-append-version="true" width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SamsungAciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SamsungFiyat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SamsungId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SamsungId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SamsungId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
